package Ejercicios_Practicos;

import java.util.Iterator;
import java.util.Random;
import java.util.Scanner;

public class ejercicio_19 {

	public static void main(String[] args) {
		// Crea y juega al ahorcado con arrays:
		Scanner sc = new Scanner(System.in);
		Random random = new Random();
		String letra;

		String[] palabras = new String[] { "azulejo", "tenedor", "saltamontes", "carretilla", "molinero", "sofisticado",
				"terremoto", "culinario", "teclado", "primavera" };

		Integer aleatorio = random.nextInt(0, 10);
		String[] palabraSecreta = palabras[aleatorio].split("");
		String[] aciertos = new String[palabraSecreta.length];

		for (int i = 0; i < aciertos.length; i++) {
			aciertos[i] = "_";
			aciertos[0] = palabraSecreta[0];
			System.out.print(aciertos[i] + " ");
		}
	
		System.out.println("Indique su primera letra: ");
		letra = sc.nextLine();
		
	    for (int i = 0; i < palabraSecreta.length; i++) {
	    	if(palabraSecreta[i].equals(letra)) {
	    		aciertos[i]= letra;}
	    		else if (!palabraSecreta[i].equals(letra)) {
					
				}
	    		
	    		
	      }
			
		}
		
		
			
		

	}

}

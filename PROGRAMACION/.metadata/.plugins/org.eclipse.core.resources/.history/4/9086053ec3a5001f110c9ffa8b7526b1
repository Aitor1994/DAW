package Ejercicios_Repaso;

public class ejercicio2 {

	public static void main(String[] args) {
		//Haz un programa que calcule la media de los alumnos que han aprobado. Imprime el resultado. 
		//Deber√≠a ser: 
		
		//ESTE ES NUESTRO ARRAY YA INICIADO CON LOS DATOS:
		Integer[] listaNotas = new Integer[] {7, 9, 8, 4, 0, 6, 3, 4, 1, 7, 3, 1, 9, 10}; 
		
		Integer aprobados = 0;
		Integer media=0;

		
		for (int i = 0; i < listaNotas.length; i++) {
			if (listaNotas[i] >= 5) {
				
				aprobados = aprobados + 1;
				media = media + listaNotas[i];
				
			}
			
		}System.out.println("La nota media de los alumnos aprobados es: " + media/aprobados);


	}

}

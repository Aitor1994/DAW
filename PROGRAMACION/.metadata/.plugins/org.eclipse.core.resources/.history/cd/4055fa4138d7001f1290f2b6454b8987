package ejercicio23;

import java.util.Scanner;

public class Ejercicio23 {

	public static void main(String[] args) {
		/*Crea una clase Profesor vacía que herede de Persona. Crea un programa que solicite por
          pantalla todos los datos de un profesor nuevo. El programa tendrá que crear un objeto
          Profesor y meter todos esos datos que el usuario le proporciona.*/
		Scanner sc = new Scanner(System.in);
		 Profesor profesor = new Profesor();
		
		System.out.println("Introduce la edad y el nombre del nuevo Profesor.");
	   
	    profesor.setEdad(sc.nextInt());
	    //Hay que poner un scaner vacio pero no vale sc.next() a de ser sc.nextLine():
	    sc.nextLine();
	    profesor.setNombre(sc.nextLine());
sc.close();


	profesor.getEdad();
	System.out.println(profesor.getNombre());
	    
	}

}
